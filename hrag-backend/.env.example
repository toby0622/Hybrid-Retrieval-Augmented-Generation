# HRAG Backend Environment Configuration
# Copy this file to .env and fill in your values

# LLM Configuration (LM Studio local server)
LLM_BASE_URL=http://localhost:8192/v1
LLM_API_KEY=lm-studio
LLM_MODEL_NAME=google/gemma-3-27b
EMBEDDING_BASE_URL=http://localhost:8192/v1
EMBEDDING_API_KEY=lm-studio
EMBEDDING_MODEL_NAME=text-embedding-embeddinggemma-300m

# Token Exchange Auth (Optional for OpenAI Compatible API)
TOKEN_ENABLED=false
TOKEN_URL=http://auth-service/token
J1_TOKEN=your_j1_token

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Qdrant Configuration  
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=hrag_documents

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# MCP Database Configuration (PostgreSQL)
MCP_DB_HOST=localhost
MCP_DB_PORT=5432
MCP_DB_NAME=hrag_mcp
MCP_DB_USER=postgres
MCP_DB_PASSWORD=postgres
MCP_ENABLED=true
